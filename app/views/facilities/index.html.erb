<div class="page-header">
  <div class="row">
    <div class="col-md-1">
      <span id="facilityIcon"><%= image_tag("facilityicon.png", height: 60) %></span>
    </div>
    <div class="col-md-3">
      <h1>Facilities</h1>
    </div>
    <div id="facilityButton" class="col-md-2">
      <%= link_to 'Add New Facility', new_facility_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<% @facilities.each do |facility| %>
  <div class="status">
    <div class="row">
      <div class="col-md-7">
        <strong><%= link_to facility.title, facility %></strong>
      </div>
    </div>
  </div>
  <hr />
<% end %>


